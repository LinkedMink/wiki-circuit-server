{
  "name": "wiki-circuit-task-processor",
  "version": "2.0.0",
  "description": "The server component of the Wiki Circuit project",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/wiki-circuit-server"
  },
  "private": true,
  "scripts": {
    "start": "ts-node-dev --inspect --respawn --transpile-only -r dotenv/config ./src/App.ts",
    "build": "tsc --project ./tsconfig.json",
    "build:prod": "tsc --project ./tsconfig.prod.json",
    "postbuild": "npm run buildPostCombined",
    "postbuild:prod": "npm run buildPostCombined",
    "buildPostCombined": "node -r dotenv/config ./build/scripts/CreateOpenApiDoc.js",
    "startBuilt": "node -r dotenv/config ./build/App.js",
    "test": "jest --config jest.config.js",
    "test:debug": "jest --config jest.debug.config.js --cache=false --detectOpenHandles --runInBand",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "format": "prettier --write ./{src,tests}/**/*.ts docs/*.yaml ./*.js{,on}",
    "containerize": "npm run build && docker build -t linkedmink/wiki-circuit-server ."
  },
  "bin": {
    "wiki-circuit-processor": "./build/App.js"
  },
  "dependencies": {
    "@linkedmink/multilevel-aging-cache": "~0.4.5",
    "@linkedmink/multilevel-aging-cache-ioredis": "~0.4.5",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validate": "^0.5.1",
    "ioredis": "^4.19.4",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.23",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.10",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node-fetch": "^2.5.7",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "^26.6.3",
    "openapi-types": "^7.2.3",
    "prettier": "^2.2.1",
    "swagger-jsdoc": "^6.0.0",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "optionalDependencies": {
    "swagger-ui-express": "^4.1.6"
  }
}
