{
  "name": "wiki-circuit-server",
  "version": "0.9.0",
  "description": "The server component of the Wiki Circuit project",
  "license": "MIT",
  "author": {
    "name": "Harlan Sang",
    "email": "harlan@linkedmink.space"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedMink/wiki-circuit-server"
  },
  "private": true,
  "scripts": {
    "start": "npm run build && npm run startApp",
    "build": "tsc",
    "startApp": "node -r dotenv/config ./build/src/app.js",
    "watch": "ts-node-dev --respawn --transpileOnly ./src/app.ts",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lintTest": "tslint -c tslint.json 'tests/**/*.ts'",
    "containerize": "npm run build && docker build -t linkedmink/wiki-circuit-server ."
  },
  "dependencies": {
    "body-parser": "~1.19.0",
    "cheerio": "~1.0.0-rc.3",
    "cors": "~2.8.5",
    "dotenv": "~8.2.0",
    "express": "~4.17.1",
    "express-ws": "~4.0.0",
    "morgan": "~1.9.1",
    "node-fetch": "~2.6.0",
    "winston": "~3.2.1"
  },
  "devDependencies": {
    "@types/cheerio": "~0.22.13",
    "@types/cors": "~2.8.6",
    "@types/express": "~4.17.1",
    "@types/express-ws": "~3.0.0",
    "@types/jest": "~24.0.22",
    "@types/morgan": "~1.7.37",
    "@types/node-fetch": "~2.5.2",
    "@types/ws": "~6.0.3",
    "cross-env": "~6.0.3",
    "jest": "~24.9.0",
    "ts-jest": "~24.1.0",
    "ts-node-dev": "~1.0.0-pre.43",
    "typescript": "~3.6.4"
  },
  "optionalDependencies": {
    "bufferutil": "~4.0.1",
    "tslint": "~5.20.1",
    "utf-8-validate": "~5.0.2"
  }
}
